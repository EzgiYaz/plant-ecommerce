@model News

<div class="col">
    <a href="/News/Details/@Model.Id" class="text-decoration-none d-block"
       style="border-radius:28px;overflow:hidden;display:block;
            box-shadow:0 6px 18px rgba(0,0,0,.06);
            transition:transform .15s ease, box-shadow .15s ease;">
        <!-- 16:9 yatay oran -->
        <div style="position:relative;padding-top:56.25%;background:#f6f6f6;">
            <img src="/Img/@Model.Image" alt="@Model.Name"
                 style="position:absolute;inset:0;width:100%;height:100%;
                  object-fit:cover;object-position:center;display:block;">
        </div>
    </a>
</div>

<script>
    // 
    document.querySelectorAll('a.text-decoration-none.d-block').forEach(el=>{
      el.addEventListener('mouseenter', ()=>{ el.style.transform='translateY(-3px)'; el.style.boxShadow='0 12px 26px rgba(0,0,0,.10)'; });
      el.addEventListener('mouseleave', ()=>{ el.style.transform='none'; el.style.boxShadow='0 6px 18px rgba(0,0,0,.06)'; });
    });
</script>
