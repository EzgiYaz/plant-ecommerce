@model IEnumerable<Eticaret.Core.Entities.Address>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Adresler";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary"> <i class="fa-solid fa-plus"></i>Yeni Adres</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Ad Soyad</th>
            <th>Telefon</th>
            <th>Şehir/İlçe</th>
            <th>Varsayılan</th>
            <th class="text-end">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Title</td>
                <td>@a.FullName</td>
                <td>@a.Phone</td>
                <td>@a.City / @a.District</td>
                <td>@(a.IsDefault ? "Evet" : "Hayır")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@a.Id"><i class="fa-solid fa-pen"></i></a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@a.Id"><i class="fa-solid fa-magnifying-glass"></i></a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@a.Id"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
